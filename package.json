{
  "name": "news-app-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @news-app/web --filter @news-app/mobile --parallel dev",
    "dev:all": "pnpm --filter @news-app/web --filter @news-app/mobile --filter @news-app/api --parallel dev",
    "dev:api": "pnpm --filter @news-app/api dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter @news-app/web start",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check && pnpm check:no-prisma-web",
    "check:no-prisma-web": "node scripts/check-no-prisma-web.mjs"
  },
  "devDependencies": {
    "prisma": "^7.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "^7.4.0"
  }
}
